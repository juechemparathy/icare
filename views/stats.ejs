<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>iCare</title>
  <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css">
  <script src="js/prefixfree.min.js"></script>
  <script src="js/myscript.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="Stats about our patients" content="Help hungry students too">

  <!-- Le styles -->
  <link href="css/main.css" rel="stylesheet">
  <link href="css/font-style.css" rel="stylesheet">
  <link href="css/flexslider.css" rel="stylesheet">

  <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
  <style type="text/css">
    body {
      background: url(images/hero2.jpg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
  </style>
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/highcharts-3d.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
</head>

<body>

<header>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#featured"><h1>iCare <span class="subhead">Fund healthcare for people around the world</span></h1></a>
      </div><!-- navbar-header -->
      <div class="collapse navbar-collapse" id="collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="/">HOME</a></li>
          <li><a href="/iglobe">CARE GLOBE</a></li>
          <li class="btn-group">
            <div id="loggedOutItem" class="btn-group" style="display:none;">
              <a href="/signup" class="btn btn-info">Sign Up</a>
              <a href="/login" class="btn btn-primary">Login</a>
            </div>
            <div id="loggedInItem" class="btn-group" style="display:none;">
              <button type="button" class="btn btn-danger">
                <a href="" id="username"></a>
              </button>
              <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>


              <ul class="dropdown-menu">
                <li class="text-primary"><a href="#" style="color:black" onclick="logout()">Log Out</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </div><!-- collapse navbar-collapse -->
    </div><!-- container -->
  </nav>
</header>

<div class="main">
  <div class="page" id="stats">
    <div class="content container">
      <div id="container" style="height: 500px"></div>

      <script type="text/javascript">

        $(function () {
          $('#container').highcharts({
            chart: {
              backgroundColor: {
                linearGradient: { x1: 0, y1: 0, x2: 1, y2: 1 },
                stops: [
                  [0, '#000000'],
                  [1, '#000000']
                ]
              },

              type: 'column',
              options3d: {
                enabled: true,
                alpha: 10,
                beta: 25,
                depth: 70
              }
            },
            title: {
              text: 'Money raised per annum',

              style:{color: '#FFFFFF',
                textTransform: 'uppercase',
                fontSize: '20px',
                fontFamily: "'Unica One', sans-serif"
              }
            },
            subtitle: {
              text: 'The difference iCare makes every year',

              style: {
                color: '#E0E0E3',
                textTransform: 'uppercase'
              }
            },
            plotOptions: {
              column: {
                depth: 25
              }
            },
            xAxis: {
              categories: Highcharts.getOptions().lang.shortMonths
            },
            yAxis: {
              title: {
                text: null
              }
            },
            series: [{
              name: '1990',
              data: [10000, 8020, null, 9400, 12100, 5000, 13000, 4000, 8635, 3756, 4353, 12000]
            },
              {
                name: '1993',
                data: [10000, 8020, null, 9400, 12100, 5000, 13000, 4000, 8635, 3756, 4353, 12000]
              },
              {
                name: '2000',
                data: [10000, 8020, null, 9400, 12100, 5000, 13000, 4000, 8635, 3756, 4353, 12000]
              }]
          });
        });

      </script>


    </div><!-- row -->
  </div><!-- content container -->
</div><!-- mission page -->

<script>
  /*Please use this code common everywhere this will reflect name on the header and mention the button*/
  (function () {
    if (!!localStorage.getItem("email") && !!localStorage.getItem("password")) {
      $("#loggedOutItem").hide();
      $("#loggedInItem").show();
      $("#username").html(localStorage.getItem("fullname").split(" ")[0]);
    } else {
      $("#loggedOutItem").show();
      $("#loggedInItem").hide();
    }

  })();

  function logout() {
    localStorage.clear();
    location.reload();
  }
</script>
</body>
</html>
